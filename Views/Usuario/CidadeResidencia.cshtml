@model AppMinhaBahia.Models.Usuario

@{
    if (ViewBag.Cargo == 'G')
    {
        Layout = "_LayoutGovernador";
    }
    else if (ViewBag.Cargo == 'P')
    {
        Layout = "_LayoutPrefeito";
    }
    else
    {
        Layout = "_LayoutComum";
    }

    ViewData["Title"] = "Cidade de residência";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Mudar cidade</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" 
                        asp-controller="Usuario" 
                        asp-action="CidadeResidencia">
                            <div class="form-floating mb-3">
                                <input name="CidadeResidenciaID" class="cidadeResidenciaID" type="hidden" value="@ViewBag.CidadeResidencia.InstituicaoID">
                                <input class="form-control nomeCidadeAutoCompletar" placeholder="Cidade de residência" value="@ViewBag.CidadeResidencia.Nome" />
                                <label asp-for="CidadeResidenciaID"></label>
                                <span asp-validation-for="CidadeResidenciaID" class="text-danger">
                                    @if (ViewBag.Erro != null)
                                    {
                                        @ViewBag.Erro;
                                    }
                                </span>
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-block">Confirmar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>