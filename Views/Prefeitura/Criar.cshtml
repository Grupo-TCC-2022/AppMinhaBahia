@model AppMinhaBahia.Models.Prefeitura

@{
    ViewData["Title"] = "Criar prefeitura";
    Layout = "_LayoutLateral";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Criar prefeitura</h3>
                            </div>
                            <div class="card-body">
                                <form asp-controller="Prefeitura" asp-action="Criar" method="post">
                                    <div class="form-floating mb-3">
                                        <input asp-for="NomeCompleto" class="form-control" placeholder="Nome completo" />
                                        <label asp-for="NomeCompleto"></label>
                                        <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="CPF" class="form-control" placeholder="CPF" />
                                        <label asp-for="CPF"></label>
                                        <span asp-validation-for="CPF" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input id="NomeCidadeAutoCompletar" name="NomeCidade" class="form-control" placeholder="Cidade" />
                                        <label asp-for="Cidade"></label>
                                        <span asp-validation-for="Cidade" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Senha" class="form-control" placeholder="Senha" />
                                        <label asp-for="Senha"></label>
                                        <span asp-validation-for="Senha" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="VerbaMunicipal" class="form-control" placeholder="Verba municipal" />
                                        <label asp-for="VerbaMunicipal"></label>
                                        <span asp-validation-for="VerbaMunicipal" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="SalarioMedioPorFuncionario" class="form-control" placeholder="Salario médio por funcionário" />
                                        <label asp-for="SalarioMedioPorFuncionario"></label>
                                        <span asp-validation-for="SalarioMedioPorFuncionario" class="text-danger"></span>
                                    </div>
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid"><button type="submit"
                                            class="btn btn-primary btn-block">Criar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>