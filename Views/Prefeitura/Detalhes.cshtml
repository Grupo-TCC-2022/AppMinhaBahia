@model AppMinhaBahia.Models.Prefeitura

@{
    ViewData["Title"] = "Detalhes";
    Layout = "_LayoutLateral";
}

<h1 class="mt-4">Detalhes</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Prefeitura" asp-action="Index">Voltar</a></li>
    <li class="breadcrumb-item active">Detalhes</li>
</ol>
<div class="card mb-4">
    <div class="card-body">
        <div>
            <h4>Prefeitura</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NomeCompleto)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NomeCompleto)
                </dd>
                <dt class = "col-sm-2">
                    CPF
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.CPF)
                </dd>
                <dt class = "col-sm-2">
                    Nome da cidade
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Cidade.Nome)
                </dd>
                <dt class = "col-sm-2">
                    Verba municipal
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.VerbaMunicipal)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayFor(model => model.SalarioMedioPorFuncionario)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SalarioMedioPorFuncionario)
                </dd>
                <dt class = "col-sm-2">
                    Setores
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Setores.Count())
                </dd>
                <dt class = "col-sm-2">
                    Requisições
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Requisicoes.Count())
                </dd>
            </dl>
        </div>
    </div>
</div>