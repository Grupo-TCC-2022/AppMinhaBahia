@model IEnumerable<AppMinhaBahia.Models.Ocorrencia>

@{
    ViewData["Title"] = "Ocorrências";
    Layout = "_LayoutLateral";
}

<h1 class="mt-4">Ocorrências</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Voltar</a></li>
    <li class="breadcrumb-item active">Ocorrências</li>
</ol>
<div class="card mb-4">
    <div class="card-body">
        @if (Model.Count() > 0)
        {
            <table id="tabela">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Local Especifico</th>
                        <th>Criação</th>
                        <th>Cidade</th>
                        <th>Dono</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ocorrencia in Model)
                    {
                        <tr>
                            <td>@ocorrencia.Tipo</td>
                            <td>@ocorrencia.LocalEspecifico</td>
                            <td>@ocorrencia.Data</td>
                            <td>@ocorrencia.Usuario.Cidade.Nome</td>
                            <td>@ocorrencia.Usuario.NomeCompleto</td>
                            <td><a asp-controller="Ocorrencia" asp-action="Detalhes">Detalhes</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h3>Nenhuma ocorrência registrada</h3>
        }
    </div>
</div>