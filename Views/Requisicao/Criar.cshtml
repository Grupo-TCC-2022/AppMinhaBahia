@model AppMinhaBahia.Models.Requisicao

@{
    if (ViewBag.Cargo == 'P')
    {
        Layout = "_LayoutPrefeito";
    }
    else
    {
        Layout = "_LayoutComum";
    }
    ViewData["Title"] = "Cadastrar";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Fazer requisição</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Requisicao" asp-action="Criar">
                            <div class="form-floating mb-3">
                                <select name="Tipo" class="form-control">
                                    @if (ViewBag.Cargo == 'P')
                                    {
                                        <option value="0">Verba</option>
                                    }
                                    else if (ViewBag.Cargo == 'U')
                                    {
                                        <option value="1">Ocorrência</option>
                                    }
                                </select>
                            </div>
                            <div class="form-floating mb-3">
                                <textarea asp-for="Descricao" class="form-control" placeholder="Descrição" rows="4" style="height: 200px;">
                                </textarea>
                                <label asp-for="Descricao"></label>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            @if (ViewBag.Cargo == 'P')
                            {
                                <div class="form-floating mb-3">
                                    <input asp-for="Verba" class="form-control" placeholder="Verba" />
                                    <label asp-for="Verba"></label>
                                    <span asp-validation-for="Verba" class="text-danger"></span>
                                </div>
                            }
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-block">Criar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>